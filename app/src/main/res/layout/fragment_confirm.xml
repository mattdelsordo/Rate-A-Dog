<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mdelsordo.rate_a_dog.ui.ConfirmFragment"
    android:id="@+id/rl_confirmfrag">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:layout_margin="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/iv_confirm_photo"
                android:src="@drawable/default_dog"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_gravity="center"/>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rate_this_dog"
                android:id="@+id/b_confirm_confirm"
                android:layout_margin="4dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_another_dog"
                android:id="@+id/b_confirm_deny"
                android:layout_margin="4dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
